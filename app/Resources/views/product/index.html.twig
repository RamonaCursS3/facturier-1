{% extends 'product/product_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('product_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('product_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Product list</h1>

        <div class="table-responsive">
            <table class="table table-hover records_list">
                <thead>
                    <tr>
                        <th>{% trans %}Reference{% endtrans %}</th>
                        <th>{% trans %}Features{% endtrans %}</th>
                        <th>{% trans %}ProductWarehouses{% endtrans %}</th>
                        <th>{% trans %}SalePrice{% endtrans %}</th>
                        <th>{% trans %}Actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in entities %}
                    <tr>
{#                        <td>
                            {{ dump(product) }}
                        </td>#}
                        <td>{{ product.reference }}</td>
                        <td>
                            {% for feature in product.features %}
                                {% if feature.name[lang] is defined %}
                                    * {{ feature.name[lang] ~ '-' ~ feature[lang] }}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% for warehouse in product.productWarehouses %}
                                * {{ warehouse.warehouse.name ~ '-' ~ warehouse.quantity }}
                            {% endfor %}
                        </td>
                        <td>{{ product.salePrice }}</td>
                        <td>
                            <a class="btn btn-sm btn-info" href="{{ path('product_show', { 'id': product.id }) }}">
                            <span class="glyphicon glyphicon-share"></span> Show</a>

                            <a class="btn btn-sm btn-default" href="{{ path('product_edit', { 'id': product.id }) }}">
                                <span class="glyphicon glyphicon-edit"></span> Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>





{% endblock %}
