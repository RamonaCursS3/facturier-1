{% extends 'product/product_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('featurename_new') }}">Add new</a></li>
        <li><a href="{{ path('featurename_index') }}">List</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Feature Name</h1>

<div class="col-lg-4">
    <div class="table-responsive">   
        <table class="table table-bordered table-hover record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ featureName.id }}</td>
            </tr>
            <tr>
                <th>Feature name value</th>
                <td>{{ featureName.fnValue }}</td>
            </tr>
            <tr>
                <th>Creation date</th>
                <td>{% if featureName.datCre %}{{ featureName.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Update date</th>
                <td>{% if featureName.datUpd %}{{ featureName.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    </div>


        {{ form_start(delete_form) }}

           {{ form_widget(delete_form) }}

        {{ form_end(delete_form) }}

</div> 


{% endblock %}
