{% extends 'base.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('csvfiles_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('csvfiles_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>CsvFiles list</h1>

<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Tip</th>
                <th>Isused</th>
                <th>Datcre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for csvFile in csvFiles %}
            <tr>
                <td><a href="{{ path('csvfiles_show', { 'id': csvFile.id }) }}">{{ csvFile.id }}</a></td>
                <td>{{ csvFile.name }}</td>
                <td>{{ csvFile.tip }}</td>
                <td>{% if csvFile.isUsed %}Yes{% else %}No{% endif %}</td>
                <td>{% if csvFile.datCre %}{{ csvFile.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('csvfiles_show', { 'id': csvFile.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('csvfiles_edit', { 'id': csvFile.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
