{% extends "FOSUserBundle::layout.html.twig" %}
{#{% form_theme form ':Form:fields.html.twig' %}#}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="form-group">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal col-md-12">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username" class="col-md-1 col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-md-3 col-sm-4">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
            <div class="form-group">
            <label for="password" class="col-md-1 col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-md-3 col-sm-4">
            <input type="password" id="password" name="_password" required="required" />
        </div></div>
                <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <div class="col-md-3 col-sm-4">
            <label for="remember_me" class="col-md-1 col-sm-2 control-label">{{ 'security.login.remember_me'|trans }}</label>
        </div></div>
        <div class="col-md-3 col-sm-4">

        <input type="submit" class="btn btn-sm btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>
</div>



{% endblock fos_user_content %}
